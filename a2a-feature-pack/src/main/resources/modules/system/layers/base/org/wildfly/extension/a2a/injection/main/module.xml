<module xmlns="urn:jboss:module:1.9" name="org.wildfly.extension.a2a.injection">

    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <artifact name="${org.wildfly.extras.a2a:wildfly-a2a-injection}"/>
    </resources>

    <dependencies>
        <!-- Jakarta EE APIs for CDI extension -->
        <module name="jakarta.enterprise.api"/>
        <module name="jakarta.inject.api"/>

        <!-- A2A Jakarta transport modules (optional - loaded at runtime if available) -->
        <module name="org.wildfly.a2a.jakarta.jsonrpc" optional="true"/>
        <module name="org.wildfly.a2a.jakarta.grpc" optional="true"/>
        <module name="org.wildfly.a2a.jakarta.rest" optional="true"/>
    </dependencies>
</module>
